<PlayerScreen>:
    ship_grid: grid
    ship_counter: counter
    turn_indicator: turn

    Image:
        source: 'icons/background.jpg'
        allow_stretch: True
        keep_ratio: False
        keep_data: True

    FloatLayout:
        Label:
            id: turn
            text: ''
            font_size: 26
            size_hint: 1, 0.1
            pos: 0, root.height * 0.02

        Label:
            id: counter
            text: 'GUESS THE ENEMY SHIPS'
            font_size: 30
            color: 0, 0, 0, 1
            size_hint: 1, 0.1
            pos: 0, root.height * 0.1

    Board:
        id: grid
        size: min(root.height * 0.7, root.width), min(root.height * 0.7, root.width)
        size_hint: None, None
        spacing: 2
        rows: 10
        cols: 10
        center: root.width / 2, root.height * 0.6