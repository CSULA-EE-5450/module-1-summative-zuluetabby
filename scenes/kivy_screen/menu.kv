<PlayerInput>:
    background_normal: ''
    background_color: 0, 0, 0, 0
    cursor_color: (1, 0, 0, 0)
    canvas.before:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            size: self.size[0], 1
            pos: self.pos[0], self.pos[1]

<StyledButton>:
    background_normal: 'icons/button.jpg'
    background_down: self.background_normal
    background_disabled_normal: 'icons/button_disabled.png'
    on_press:
        self.background_active = self.background_normal
    on_release:
        self.opacity = 0.6

<Label>:
    font_name: 'Arial'
    font_size: 18
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos:
                int(self.center_x - self.texture_size[0]) , int(self.center_y - self.texture_size[1])


<MainMenuButton@StyledButton>:
    background_color: 0, 0, 0, 0
    font_size: 32
    color: 0, 0, 0, 1
    on_press:
        self.bold = True
    on_release:
        self.bold = False

<MenuScreen>:
    name: 'main'

    Image:
        source: 'icons/title_screen.jpg'
        allow_stretch: True
        keep_ratio: False
        keep_data: True

    FloatLayout:
        Image:
            source: 'icons/logo.png'
            size_hint_y: None
            center_y: root.height

        BoxLayout:
            orientation: 'vertical'
            size: 0, root.height
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas.before:
                Color:
                    rgb: (0.5, 0.5, 0.5)
                Rectangle:
                    size: self.size[0], 1
                    pos: self.pos[0], 15
            canvas.after:
                Color:
                    rgb: (0.5, 0.5, 0.7)
                Rectangle:
                    size: self.size[0], 1
                    pos: self.pos[0], self.pos[1] + self.size[1]

            SingleplayerButton:
                text: 'Play Alone'

            PvPButton:
                text: 'Battle a Friend'

            MultiplayerButton:
                text: 'Multiplayer'

            QuitButton:
                text: 'Abort'
